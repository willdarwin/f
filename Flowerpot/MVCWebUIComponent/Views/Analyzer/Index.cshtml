@model List<MVCWebUIComponent.Models.AnalyzerModel>
@{
    ViewBag.Title = @Resources.Resources.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height: 90px; margin-top: -15px;">
    <img alt="Entities" style="width: 55px; height: 75px; float: left" src="../../Content/images/Analyzer.png" />
    <div style="width: 300px; float: left; margin-top: 30px; margin-left: 10px; font-size: 24px;
        color: black;">@Resources.Resources.ALinkAnalyzerList</div>
    <div style="float: right; font-size: x-large; margin-top: 30px;">@Html.ActionLink(@Resources.Resources.ALinkCreateNewAnalyzer, "CreateAnalyzer")</div>
</div>
@{
    if (Model != null)
    {
        foreach (var item in Model)
        {
    <div style="float: left;">
        <table style="border: 0 solid silver; width: 400px; background-color: hsl(160, 0%, 100%);
            margin-left: 10px; margin-bottom: 10px; border-collapse: 0;">
            <tr style="height: 20px;">
                <td colspan="2" style="text-align: right; padding-right: 5px;">
                    <img alt="Add" style="width:18px; height:18px; cursor: pointer" onclick="javascript: window.open('@Url.Action("CreateAnalyzer", new { id = item.AnalyzerId })');" src="../../Content/images/Edit.png" />
                    <img alt="Informations" style="width:18px; height:18px; cursor: pointer" onclick="javascript: window.open('@Url.Action("Informations", new { dataid = item.AnalyzerId })');" src="../../Content/images/Data.png" />
                    <img alt="Delete" style="width:18px; height:18px; cursor: pointer" onclick="javascript: window.open('@Url.Action("DeleteAnalyzer", new { id = item.AnalyzerId })');" src="../../Content/images/Delete.png" />
                </td>
            </tr>
            <tr style="height: 30px;">
                <td style="font-size: 24px; width: 240px; border-right: 0;">
                    <a href="@Url.Action("Informations", new { dataid = item.AnalyzerId })" style="text-decoration:none; color:Blue; cursor: pointer;">
                        @Html.DisplayFor(model => item.AnalyzerName)</a>
                </td>
                <td style="text-align: right; width: 160px; border-left: 0;">
                    @Html.DisplayFor(model => item.CreateTime)
                </td>
            </tr>
        </table>
    </div>
        }
    }
}
