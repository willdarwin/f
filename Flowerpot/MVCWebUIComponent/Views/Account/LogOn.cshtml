@model MVCWebUIComponent.Models.LogOnModel

@{
    ViewBag.Title = @Resources.Resources.LogOnTitle;
}

<h2>@Resources.Resources.LogOnHead</h2>
<p>
    @Resources.Resources.LogOnHeadMessage1 @Html.ActionLink(@Resources.Resources.Register, "Register") @Resources.Resources.LogOnHeadMessage2
</p>

@Html.ValidationSummary(true, @Resources.Resources.LogOnSummaryMessage)

@using (Html.BeginForm()) {
    @Html.HiddenFor(m => m.ReturnUrl)
    <div>
        <fieldset>
            <legend>@Resources.Resources.AccountInfo</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value=@Resources.Resources.LogOn />
            </p>
        </fieldset>
    </div>
}
